<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    android:padding="10dp"
    tools:context=".DeletePersonActivity">

    <TextView
        android:id="@+id/lbl_Name"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Name :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/lbl_Name"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:hint="Enter Name here"
        android:nextFocusDown="@+id/edt_phone"
        android:padding="10dp"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/lbl_phone"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Name"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Phone :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lbl_Name"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/lbl_phone"
        android:digits="1234567890"
        android:hint="Enter phone number here"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/lbl_phone"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/btn"
        android:padding="10dp"
        android:text="Search"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/edt_phone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/btn_search"
        android:background="@drawable/btn"
        android:padding="10dp"
        android:text="delete"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_address"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_search"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Address :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_delete"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/lbl_phone"
        android:hint="Address as:"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/lbl_address"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/btn"
        android:padding="10dp"
        android:text="Back"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />
</RelativeLayout>