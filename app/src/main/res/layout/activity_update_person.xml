<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    android:padding="10dp"
    tools:context=".UpdatePersonActivity">

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:hint="Enter Name here"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/edt_name"
        android:background="@drawable/btn"
        android:padding="10dp"
        android:text="Search"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_address"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_name"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Address :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_search"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/lbl_address"
        android:hint="Enter Address here"
        android:nextFocusDown="@+id/edt_phone"
        android:padding="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lbl_phone"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_address"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Phone :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lbl_address"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/lbl_phone"
        android:digits="1234567890"
        android:hint="Enter Phone number here"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/edt_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn"
        android:padding="10dp"
        android:text="update"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btn_update"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn_update"
        android:background="@drawable/btn"
        android:padding="10dp"
        android:text="back"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</RelativeLayout>